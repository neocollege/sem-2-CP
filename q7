// WAP to read a number, reverse the number and display the sum of digits of number
#include <stdio.h>

int main()
{
    int a,b,sum=0;
    printf("Enter a number : \n");
    scanf("%d",&a);
    while(a>0)
    {
        b=a%10;
        printf("%d",b);
        sum=sum+b;
        a=a/10;
    }
    printf("\nThe sum of the digits is: %d",sum);
    
    return 0;
}
